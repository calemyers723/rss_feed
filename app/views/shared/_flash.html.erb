<div class="flash">
  <% if flash[:notice].present? %>
    <div class="notice">
      <p><%= flash[:notice] %></p>
    </div>
  <% end %>
  <% if flash[:alert].present? %>
    <div class="alert">
      <p><%= flash[:alert] %></p>
    </div>
  <% end %>
</div>

<style type="text/css">
  .flash {
    color: white;
  }

  .flash p {
    margin: 0;
    padding: 10px;
  }

  .flash .alert {
    background-color: #c51818;
  }

  .flash .notice {
    background-color: #6d8827;
  }


</style>